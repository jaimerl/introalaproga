#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;
void main (){
	float x,n,i, s=0, sig=1;
	cout<< "Ingrese la cantidad de numeros: ";
    cin>> n;
	cout<< "Ingrese el valor de x: ";
	cin>> x;
	for (i=1;i<=n;i++) {
		s=s+sig*pow(x,i);
		sig=sig*(-1);
	}
	cout<< "El resultado es: "<<s<<endl;
	getch ();
}
